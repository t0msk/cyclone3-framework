	alarm(0);
	
	my %env=@_;

	$env{lng} = 'en' unless $env{lng};
	$env{type} = 'empty' unless $env{type};
	
	$env{to_email} = $TOM::contact{'stats'}.";".$TOM::contact{'TOM'};
