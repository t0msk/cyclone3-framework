#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;

=head1 NAME

210-page_to_trash.0.mdl

=cut

=head1 DESCRIPTION

Vyhodenie položky do Trash-u

=cut

=head1 INPUTS

=over

=item *

B<ID> - ID záznamu

=back

=cut

=head1 XSGN

=over

=item *

B<TMP> - defaultne error

=item *

B<RESULT_success> - bez erroru

=item *

B<RESULT_failure_no_input> - zlý vstup

=item *

B<RESULT_failure_set> - nepodarilo sa vykonať

=item *

B<&lt;%ID%&gt;> - ID

=item *

B<&lt;%missing_parameter%&gt;> - chýbajúci parameter

=back

=cut

sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	my $out;
	
	$env{'ID'}.=';';
	foreach my $ID (split(';',$env{'ID'}))
	{
		next unless $ID;
		
		# zistim ID_charindex
		my %data=App::020::SQL::functions::get_ID(
			'db_h' => "main",
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => "a210_page",
			'-journalize' => 1,
			'ID'   => $ID,
			'columns' =>
			{
				'ID_charindex' => 1,
				'status' => 1,
				'lng' => 1,
			}
		);
		
		if (!$data{'ID'})
		{
			main::_log("ID='$ID' not exists");
			$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
			$XSGN{'TMP'}=~s|<%ID%>|$data{'ID'}|g;
			return 1;
		}
		
		if (not $data{'status'} =~/^[YN]$/)
		{
			$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
			$XSGN{'TMP'}=~s|<%ID%>|$data{'ID'}|g;
			return 1;
		}
		
		# hladam ci mam pod sebou platne polozky
		my $sql=qq{
			SELECT
				ID
			FROM
				`$TOM::DB{'main'}{'name'}`.`a210_page`
			WHERE
				ID_charindex LIKE '$data{'ID_charindex'}%'
				AND status IN ('Y','N')
				AND lng = '$data{'lng'}'
			ORDER BY
				ID_charindex DESC
		};
		my %sth0=TOM::Database::SQL::execute($sql,'db_h'=>"main");
		while (my %db0_line=$sth0{'sth'}->fetchhash())
		{
			
			$out=App::020::SQL::functions::to_trash(
				'db_h' => "main",
				'db_name' => $TOM::DB{'main'}{'name'},
				'tb_name' => "a210_page",
				'-journalize' => 1,
				'ID'   => $db0_line{'ID'}
			);
			
			if (!$out)
			{
				$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
				$XSGN{'TMP'}=~s|<%ID%>|$data{'ID'}|g;
				return 1;
			}
			
		}
		
	}
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	#$XSGN{'TMP'}=~s|<%ID%>|$data{'ID'}|g;
	#$XSGN{'TMP'}=~s|<%status%>|T|g;
	
	return 1;
}

