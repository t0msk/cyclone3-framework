#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;



=head1 NAME

501-image_view.lite.mdl

=head1 DESCRIPTION

Lite view of image

=head1 DEPENDS

=over

=item *

L<App::501::_init|app/"501/_init.pm">

=back

=cut

use App::501::_init;



=head1 INPUTS

=over

=item *

B<image.ID> || B<ID> - ID of image

=item *

B<image.ID_entity> || B<ID_entity> - ID_entity of image

=item *

B<image_attrs.status> - required status (default 'Y')

=item *

B<image_file.ID_format> - required format (default is fullsize)

=back

=cut



=head1 XSGN

=over

=item *

B<TMP> - image item

=item *

B<%db_*%> - image database variables

=item *

B<%original.db_*%> - original image database variables

=item *

B<%fullsize.db_*%> - fullsize image database variables

=back

=cut



sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	$env{'db_name'}=$App::501::db_name unless $env{'db_name'};
	
	$env{'image.ID'}=$env{'ID'} unless $env{'image.ID'};
	
	
	my $sql=qq{
		SELECT
			image.*
		FROM
			`$env{'db_name'}`.a501_image_view AS image
		WHERE
			image.ID_image = $env{'image.ID'} AND
			image.ID_category = $env{'image_attrs.ID_category'}
--			AND image.lng = '$env{'lng'}'
	};
	my %sth0=TOM::Database::SQL::execute($sql,'log'=>1,'slave'=>1);
	while (my %db0_line=$sth0{'sth'}->fetchhash())
	{
		$XSGN{'TMP'}=~s|<%db_(.*?)%>|$db0_line{$1}|g;
		
		if ($db0_line{'ID_format'} eq $App::501::image_format_original_ID)
		{
			$XSGN{'TMP'}=~s|<%original.db_(.*?)%>|$db0_line{$1}|g;
		}
		
		if ($db0_line{'ID_format'} eq $App::501::image_format_fullsize_ID)
		{
			$XSGN{'TMP'}=~s|<%fullsize.db_(.*?)%>|$db0_line{$1}|g;
		}
		
		my $format=$XSGN{'format'};
		
		$format=~s|<%db_(.*?)%>|$db0_line{$1}|g;
		
		$XSGN{'TMP'}=~s|<#format#>|$format|;
		
	}
	
	return 1;
}


