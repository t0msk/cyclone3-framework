#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;

=head1 NAME

501-image_status.0.mdl

=cut

=head1 DESCRIPTION

Change status of image

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'image.ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|image.ID|g;
		return 1;
	}
	
	if (!$env{'image_attrs.ID_category'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|image_attrs.ID_category|g;
		return 1;
	}
	
	if (!$env{'image_attrs.status'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|image_attrs.status|g;
		return 1;
	}
	
	my $sql=qq{
		SELECT
			ID_attrs
		FROM
			`$App::501::db_name`.a501_image_view
		WHERE
			ID_image = $env{'image.ID'} AND
			ID_category = $env{'image_attrs.ID_category'}
		LIMIT 1
	};
	my %sth0=TOM::Database::SQL::execute($sql);
	my %db0_line=$sth0{'sth'}->fetchhash();
	
	if ($db0_line{'ID_attrs'})
	{
		if ($env{'image_attrs.status'} eq "Y")
		{
			App::020::SQL::functions::enable(
				'db_h' => "main",
				'db_name' => $App::501::db_name,
				'tb_name' => 'a501_image_attrs',
				'-journalize' => 1,
				'ID' => $db0_line{'ID_attrs'},
			);
		}
		elsif ($env{'image_attrs.status'} eq "N")
		{
			App::020::SQL::functions::disable(
				'db_h' => "main",
				'db_name' => $App::501::db_name,
				'tb_name' => 'a501_image_attrs',
				'-journalize' => 1,
				'ID' => $db0_line{'ID_attrs'},
			);
		}
		else
		{
			$XSGN{'TMP'}=$XSGN{'RESULT_failure_set'};
			$XSGN{'TMP'}=~s|<%ID%>|$env{'image.ID'}|g;
			return 1;
		}
	}
	
	$XSGN{'TMP'}=$XSGN{'RESULT_success'};
	$XSGN{'TMP'}=~s|<%ID%>|$env{'image.ID'}|g;
	
	return 1;
}


