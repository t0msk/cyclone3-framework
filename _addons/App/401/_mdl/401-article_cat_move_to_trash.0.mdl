#!/usr/bin/perl
# USE UTF-8 !!!
package Tomahawk::module;
use open ':utf8', ':std';
use encoding 'utf8';
use utf8;
use strict;

use App::020::_init;

=head1 NAME

401-article_cat_move_to_trash.0.mdl

=cut

=head1 DESCRIPTION

Remove folder (and subfolders) and articles contained to Trash

=cut


sub execute
{
	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	if (!$env{'ID'})
	{
		$XSGN{'TMP'}=$XSGN{'RESULT_failure_no_input'};
		$XSGN{'TMP'}=~s|<%missing_parameter%>|ID|g;
		return 1;
	}
	
	$env{'ID'}.=';';
	foreach my $ID(split(';',$env{'ID'}))
	{
		next unless $ID;
		
		# get this ID
		my %data=App::020::SQL::functions::get_ID(
			'db_h'    => 'main',
			'db_name' => $TOM::DB{'main'}{'name'},
			'tb_name' => 'a401_article_cat',
			'ID'      => $ID,
			'columns' => 
			{
				'ID_charindex' => 1,
				'lng' => 1
			}
		);
		
		# get ID and list of ID's childs
		my $sql=qq{
			SELECT
				ID, ID_entity, ID_charindex
			FROM
				a401_article_cat
			WHERE
				ID_charindex LIKE '$data{'ID_charindex'}%'
				AND status IN ('Y','N')
				AND lng='$data{'lng'}'
			ORDER BY
				ID_charindex DESC
		};
		# ordered DESC because child must be deleted before parent
		my %sth0=TOM::Database::SQL::execute($sql);
		while (my %db0_line=$sth0{'sth'}->fetchhash())
		{
			
			# get files from this node
			my $sql=qq{
				SELECT
					ID, ID_entity
				FROM
					a401_article
				WHERE
					ID_category='$db0_line{'ID_entity'}'
					AND lng='$data{'lng'}'
					AND status IN ('Y','N')
			};
			my %sth1=TOM::Database::SQL::execute($sql);
			while (my %db1_line=$sth1{'sth'}->fetchhash())
			{
				App::020::SQL::functions::to_trash
				(
					'ID' => $db1_line{'ID'},
					'db_h' => 'main',
					'db_name' => $TOM::DB{'main'}{'name'},
					'tb_name' => 'a401_article',
					'-journalize' => 1,
				);
			}
			
			App::020::SQL::functions::to_trash
			(
				'ID' => $db0_line{'ID'},
				'db_h' => 'main',
				'db_name' => $TOM::DB{'main'}{'name'},
				'tb_name' => 'a401_article_cat',
				'-journalize' => 1,
			);
			
			$XSGN{'TMP'}=$XSGN{'RESULT_success'};
			
		}
		
	}
	
	return 1;
}


our $authors='open@comsultia.com';

