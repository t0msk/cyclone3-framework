	my %env=@_;
	Tomahawk::GetXSGN('-convertvars'=>1) || return undef;
	
	$env{'db_name'}=$App::401::db_name unless $env{'db_name'};
	
	$env{'sql_lng'}=$env{'lng'} unless $env{'sql_lng'};
	$env{'sql_limit'}='1' unless $env{'sql_limit'};
	$env{'sql_status'}='Y' unless $env{'sql_status'};
		my $status_sql=join "','", split('',$env{'sql_status'});
	$env{'sql_mimetype'}='text/html' unless $env{'sql_mimetype'};
	
